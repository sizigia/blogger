<div class="top-embody"><h1>Login</h1></div>

<div class="session">
<%= form_tag author_sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag :email %><br>
    <%= text_field_tag :email %>
    <br>
  </div>
  <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
    <br>
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>
</div>

<div class="backopt">
<%= link_to 'Back', articles_path %>
</div>